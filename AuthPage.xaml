<Page x:Class="Zianberdin41размер.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zianberdin41размер"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text ="Логин" Grid.Row="1" Grid.Column="0" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5"></TextBlock>
        <TextBlock Text ="Пароль" Grid.Row="1" Grid.Column="0" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"></TextBlock>
        <TextBox Name="LoginTB" Grid.Row="1" Grid.Column="1" FontSize="30" Width="250" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <TextBox Name="PassTB" Grid.Row="1" Grid.Column="1" FontSize="30" Width="250" Height="45" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBox>
        <Button Content="Войти как многоуважаемый Гость" Width="350" Height="30" x:Name="TBGost_Changed" Grid.Row="2" Grid.Column="0" Click="TBGost_Changed_Click"></Button>
        <Button Content="Войти как авторизованный" Width="350" Height="30" x:Name="TBVhod_Changed" Grid.Row="2" Grid.Column="1" Click="TBVhod_Changed_Click"></Button>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" Visibility="Collapsed" Name="CaptchaPanel">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
                <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
                <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
                <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
                <TextBox Name="CaptchaInput" FontSize="16" Width="150" Height="30" Margin="0,10,0,0" 
             HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
